{
	"easycom": {
		"^u-(.*)": "uview-ui/components/u-$1/u-$1.vue"
	},
	"pages": [ //pages数组中第一项表示应用启动页，参考：https://uniapp.dcloud.io/collocation/pages
		{
			"path": "pages/index/index",
			"style": {
				"app-plus":{
					// 导航栏配置
					"titleNView":{
						// 搜索框配置
						"searchInput":{
							"align":"center",
							"backgroundColor":"#F5F4F2",
							"borderRadius":"4px",
							"disabled":true,
							"placeholder":"搜索帖子",
							"placeholderColor":"#6D6C67"
						},
						"buttons":[
							{
								"color":"#333333",
								"colorPressed":"#7b9f5d",
								"float":"right",
								"fontSize":"20px",
								"fontSrc":"/static/iconfont.ttf",
								"text":"\ue668"
							}
						]
					}
				}
			}
		}, {
			"path": "pages/place/place",
			"style": {
				"enablePullDownRefresh": false
			}

		}, {
			"path": "pages/my/my",
			"style": {
				"navigationBarTitleText":"个人中心",
				"app-plus": {
					"titleNView": {
						"buttons": [{
							"type":"menu"
						}]
					}
				}
			}

		}
	    ,{
            "path" : "pages/add-input/add-input",
            "style" :                                                                                    
            {
                "app-plus": {
					"titleNView": false
				}
            }
            
        }
        ,{
            "path" : "pages/place-nav/place-nav",
            "style" :                                                                                    
            {
                "navigationBarTitleText": "玩场分类",
                "enablePullDownRefresh": false
            }
            
        }
        ,{
            "path" : "pages/place-detail/place-detail",
            "style" :                                                                                    
            {
                "navigationBarTitleText": "",
                "enablePullDownRefresh": false
            }
            
        }
        ,{
            "path" : "pages/user-set/user-set",
            "style" :                                                                                    
            {
                "navigationBarTitleText": "设置",
                "enablePullDownRefresh": false
            }
            
        }
        ,{
            "path" : "pages/user-space/user-space",
            "style" :                                                                                    
            {
				"navigationBarTitleText":"个人空间",
				"app-plus": {
					"titleNView": {
						"buttons": [{
							"type":"menu"
						}]
					}
				}
            }
            
        }
        ,{
            "path" : "pages/detail/detail",
            "style" :                                                                                    
            {
               "app-plus": {
				   "titleNView":{
					   "buttons": [{
						   "type":"menu",
							"float":"right"
					   }]
				   }
			   }
            }
            
        },
		{
		    "path" : "pages/detail/comments",
			"style" :
			{
			    "navigationBarTitleText": "评论列表",
			    "enablePullDownRefresh": false
			}
		}
        ,{
            "path" : "pages/add-card/add-card",
            "style" :                                                                                    
            {
                "navigationBarTitleText": "发帖子",
                "enablePullDownRefresh": false
            }
            
        },
		{
		    "path" : "pages/activity-detail/detail",
			"style" :
			{
			    "navigationBarTitleText": "活动详情",
			    "enablePullDownRefresh": false
			}
		},
		{
		    "path" : "pages/activity-detail/comments",
			"style" :
			{
			    "navigationBarTitleText": "评论列表",
			    "enablePullDownRefresh": false
			}
		},
		{
		    "path" : "pages/add-activity/add-activity",
			"style" :
			{
			    "navigationBarTitleText": "发活动",
			    "enablePullDownRefresh": false
			}
		}
    ],
	"globalStyle": {
		"navigationBarTextStyle": "black",
		"navigationBarTitleText": "自然玩主",
		"navigationBarBackgroundColor": "#FFFFFF",
		"backgroundColor": "#FFFFFF"
	},
	"tabBar": {
		"color": "#323232",
		"selectedColor": "#85a363",
		"backgroundColor": "#FFFFFF",
		"borderStyle": "black",
		"list": [{
				"pagePath": "pages/index/index",
				"text": "玩主",
				"iconPath": "static/tabbar/index.png",
				"selectedIconPath": "static/tabbar/indexed.png"
			},
			{
				"pagePath": "pages/place/place",
				"text": "玩场",
				"iconPath": "static/tabbar/place.png",
				"selectedIconPath": "static/tabbar/placed.png"
			},{
				"pagePath": "pages/my/my",
				"text": "我的",
				"iconPath": "static/tabbar/my.png",
				"selectedIconPath": "static/tabbar/myed.png"
			}
		]
	}
}
